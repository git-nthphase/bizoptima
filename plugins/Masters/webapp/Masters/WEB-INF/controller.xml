<?xml version="1.0" encoding="UTF-8"?>

<site-conf
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://ofbiz.apache.org/Site-Conf"
	xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">
	<!-- The controller elements that are common to all OFBiz components can 
		be found in the following xml file. A component can override the elements 
		found in the common-controller.xml file. -->
	<include
		location="component://common/webcommon/WEB-INF/common-controller.xml" />

	<description>Masters Component Site Configuration File</description>

	<!-- Events to run on every request before security (chains exempt) -->
	<!-- <preprocessor> </preprocessor> -->
	<!-- Events to run on every request after all other processing (chains exempt) -->
	<!-- <postprocessor> <event name="test" type="java" path="org.apache.ofbiz.webapp.event.TestEvent" 
		invoke="test"/> </postprocessor> -->

	<!-- Request Mappings -->
	<request-map uri="main">
		<security https="true" auth="true" />
		<response name="success" type="view" value="main" />
	</request-map>
	<request-map uri="findFacility">
		<security https="true" auth="true" />
		<response name="success" type="view" value="findFacility" />
	</request-map>
	<request-map uri="findFacilityGroup">
		<security https="true" auth="true" />
		<response name="success" type="view"
			value="findFacilityGroup" />
	</request-map>
	<request-map uri="findFacilityGroupMember">
		<security https="true" auth="true" />
		<response name="success" type="view"
			value="findFacilityGroupMember" />
	</request-map>
	<request-map uri="users">
		<security https="true" auth="true" />
		<response name="success" type="view"
			value="users" />
	</request-map>
	<request-map uri="findUser">
		<security https="true" auth="true" />
		<response name="success" type="view"
			value="findUser" />
	</request-map>
	 <request-map uri="createCustomer">
        <security https="true" auth="true"/>
        <event type="simple" path="component://party/minilang/user/UserEvents.xml" invoke="createCustomer"/>
        <response name="success" type="request-redirect" value="users">
            <redirect-parameter name="partyId"/>
        </response>
        <response name="error" type="view" value="users"/>
    </request-map>
	

	<!-- View Mappings -->
	<view-map name="main" type="screen"
		page="component://Masters/widget/MastersScreens.xml#main" />
	<view-map name="findFacility" type="screen"
		page="component://Masters/widget/MastersScreens.xml#findFacility" />
	<view-map name="findFacilityGroup" type="screen"
		page="component://Masters/widget/MastersScreens.xml#findFacilityGroup" />
	<view-map name="findFacilityGroupMember" type="screen"
		page="component://Masters/widget/MastersScreens.xml#findFacilityGroupMember" />
	<view-map name="users" type="screen"
		page="component://Masters/widget/MastersScreens.xml#users" />
	<view-map name="findUser" type="screen"
		page="component://Masters/widget/MastersScreens.xml#findparty" />	
</site-conf>