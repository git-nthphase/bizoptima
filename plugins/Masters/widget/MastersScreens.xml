<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://ofbiz.apache.org/Widget-Screen"
	xsi:schemaLocation="http://ofbiz.apache.org/Widget-Screen http://ofbiz.apache.org/dtds/widget-screen.xsd">

	<screen name="findFacility">
		<section>
			<actions>
				<set field="headerItem" value="Facility" /><!-- this highlights the 
					selected menu-item with name "main" -->
					 <script location="component://Masters/src/main/groovy/facility/findFacility.groovy"/>
			</actions>
			<widgets>
				<decorator-screen name="MastersCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<screenlet>
							<platform-specific>
								<html>
									<html-template
										location="component://Masters/template/facilityMasters.ftl" />
								</html>
							</platform-specific>
						</screenlet>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="findFacilityGroup">
		<section>
			<actions>
				<set field="headerItem" value="Facility Group" /><!-- this highlights 
					the selected menu-item with name "main" -->
			</actions>
			<widgets>
				<decorator-screen name="MastersCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="findFacilityGroupMember">
		<section>
			<actions>
				<set field="headerItem" value="Facility" />
				<set field="subHeaderItem" value="Facility Group Member" /><!-- this 
					highlights the selected menu-item with name "main" -->
			</actions>
			<widgets>
				<decorator-screen name="MastersCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="main">
		<section>
			<actions>
				<set field="headerItem" value="main" /><!-- this highlights the selected 
					menu-item with name "main" -->
			</actions>
			<widgets>
				<decorator-screen name="MastersCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="users">
		<section>
			<actions>
				<set field="headerItem" value="User" /><!-- this highlights the selected 
					menu-item with name "main" -->
				 <script location="component://Masters/src/main/groovy/facility/findParty.groovy"/>	
			</actions>
			<widgets>
				<decorator-screen name="MastersCommonDecorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
					<screenlet>
							<platform-specific>
								<html>
									<html-template
										location="component://Masters/template/users.ftl" />
								</html>
							</platform-specific>
						</screenlet>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>
	<screen name="findparty">
        <section>
            <actions>
                <!-- <set field="titleProperty" value="PageTitleFindParty"/>
                <set field="headerItem" value="find"/>
                <set field="tabButtonItem" value="findparty"/>
                <set field="helpAnchor" value="_help_for_the_party_find_screen"/>
                asmselect parameters, must be prefixed by asm_ for SetMultipleSelectJs.ftl
                <set field="asm_multipleSelectForm" value="LookupParty"/>
                <set field="asm_multipleSelect" value="LookupParty_partyClassificationGroupId"/>
                <set field="asm_formSize" value="700"/>
                <set field="asm_listItemPercentOfForm" value="95"/>
                <set field="asm_sortable" value="false"/>

                <set field="initialyCollapsed" value="${groovy:'Y'.equals(parameters.hideFields)}" type="String"/> -->
                <script location="component://Masters/src/main/groovy/facility/findParty.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="pre-body">
                        <include-menu name="MainActionMenu" location="component://party/widget/partymgr/PartyMenus.xml"/>
                    </decorator-section>
                    <decorator-section name="body">
                        <platform-specific><html><html-template multi-block="true" location="component://common-theme/template/includes/SetMultipleSelectJs.ftl"/></html></platform-specific>
                        <section>
                            <!-- do check for PARTYMGR, _VIEW permission -->
                            <condition>
                                <if-service-permission service-name="partyBasePermissionCheck" main-action="VIEW"/>
                            </condition>
                            <widgets>
                                <screenlet id="FindPartyPanel">
                                <platform-specific>
								   <html>
									<html-template
										location="component://Masters/template/findUser.ftl" />
								   </html>
							      </platform-specific>
                                    
                                </screenlet>
                                <screenlet >
                                    <include-grid name="ListParty${extInfo}" location="component://party/widget/partymgr/PartyForms.xml"/>
                                </screenlet>
                            </widgets>
                            <fail-widgets>
                                <label style="h3" text="${uiLabelMap.PartyMgrViewPermissionError}"/>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

</screens>